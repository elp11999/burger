
  <div class="container">
    <div class="row">
      <div class="burger-lists">
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class=" burger-create">
        <h1 class="main-title">Eat-Da-Burger!!!!</h1>
        <img src="/assets/images/Cheeseburger4.jpeg" alt="cheeseburger image" width="100" height="100">
        <form>
          <div class="form-group">
            <input type="text" id="burger-name" name="name">
          </div>
        </form>
        <button id="add-burger">Add Burger</button>
      </div>
      <div class="burger-lists">
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
      